import java.util.* ;
import java.io.*; 
public class Solution {
    public static boolean checkBits(int n) {
        // Write your code here.

        String str = Integer.toBinaryString(n);
        int i=0;
        for(i= 1;i<str.length();i++)
        {
            if(str.charAt(i)==str.charAt(i-1))
            {
                return false;
            }
        }
        return true;
    }
}



/*************************** I/O ****************/
/*
23 - false
170 - true


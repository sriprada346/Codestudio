public class test {
    public static void main(String args[])
    {
        int[] a ={4,2,9,1,8,7};
        int first ,second;
        first = a[0];
        second = a[0];

        for(int i=1;i<a.length;i++)
        {
            if(a[i] > first)
            {
                second = first;
                first = a[i];
            }
            else if(a[i]>second)
            {
                second = a[i];
            }
        }

        System.out.println(second);


    }
}
